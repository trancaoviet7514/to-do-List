<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.trancaoviet.myhelper.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:weightSum="1">

    <TextView
        android:text="Xem theo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFilter"
        android:textSize="20dp"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/spType"
        android:layout_alignParentTop="true"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"/>

    <TextView
        android:text="Danh sách công việc:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spType"
        android:id="@+id/textView"
        />

    <TextView
        android:text="25/06/2018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/spType"
        android:id="@+id/textValueSp"
        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textView"
        android:id="@+id/textView2"
        android:background="@color/colorPrimary"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView"
        android:id="@+id/rcvTask" />
</RelativeLayout>
