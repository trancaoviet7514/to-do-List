<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="1dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm ghi chú"
        android:id="@+id/textViewAddTask"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"/>

    <EditText
        android:id="@+id/edtTaskContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAddTask"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.13"

        android:gravity="top|left"
        android:hint="Nội dung"
        android:inputType="textMultiLine"
        android:lines="3"
        android:maxLines="10"
        android:minLines="3"
        android:scrollbars="vertical"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTaskContent"
        android:layout_marginTop="10dp"
        android:text="Ngày:"
        android:textSize="15dp"
        android:id="@+id/textViewNgay"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edtTaskContent"
        android:text="02/10/2018"
        android:id="@+id/btnDate"
        android:background="@null"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textViewNgay"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNgay"
        android:layout_marginTop="20dp"
        android:text="Giờ:"
        android:textSize="15dp"
        android:id="@+id/textViewGio"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnDate"
        android:layout_alignTop="@+id/textViewGio"
        android:text="23:59"
        android:id="@+id/btnTime"
        android:background="@null"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textviewBaoNhac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewGio"
        android:layout_marginTop="20dp"
        android:text="Báo nhắc:"
        android:textSize="15dp"
        android:textColor="#000000"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnTime"
        android:id="@+id/btnNotifycation"
        android:checked="false"
        android:textColorHighlight="@color/colorPrimary"
        android:layout_alignTop="@+id/textviewBaoNhac"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hủy"
        android:layout_below="@id/btnNotifycation"
        android:layout_toLeftOf="@+id/btnSave"
        android:layout_marginTop="20dp"
        android:id="@+id/btnCancel"
        android:background="@null"
        android:textColor="@color/colorAccent"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:layout_below="@id/btnNotifycation"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:id="@+id/btnSave"
        android:background="@null"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:padding="10dp"/>
</RelativeLayout>
