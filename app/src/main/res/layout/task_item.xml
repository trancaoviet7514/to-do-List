<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Task title"
        android:id="@+id/txtTaskTitle"
        android:layout_toRightOf="@+id/btnComplete"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:maxLines="1"
        android:textStyle="bold"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/rubbish"
        android:layout_marginEnd="26dp"
        android:layout_alignParentEnd="true"
        android:foregroundGravity="center"
        android:id="@+id/btnDelete"
        android:layout_centerInParent="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/uncomplete"
        android:layout_alignParentStart="true"
        android:id="@+id/btnComplete"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:50 AM"
        android:id="@+id/txtTime"
        android:layout_below="@id/txtTaskTitle"
        android:layout_toRightOf="@id/btnComplete"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21/06/2018"
        android:id="@+id/txtDate"
        android:layout_below="@id/txtTaskTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="10dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/unnotification"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnNotyficationInItem"
        android:layout_centerInParent="true"
        />


</RelativeLayout>